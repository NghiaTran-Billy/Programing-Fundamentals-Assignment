{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build and Run with Makefile",
            "type": "shell",
            "dependsOn": [
                "Build with Makefile (final)",
                "Run final.exe"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Run 'make final' and 'make run' sequentially in PowerShell",
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoExit", // Giữ terminal mở
                        "-Command"
                    ]
                }
            }
        },
        {
            "label": "Build with Makefile (final)",
            "type": "shell",
            "command": "make",
            "args": ["final"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoExit", // Giữ terminal mở
                        "-Command"
                    ]
                }
            },
            "problemMatcher": ["$gcc"], // Bắt lỗi biên dịch
            "detail": "Run 'make final' to build final.exe in PowerShell"
        },
        {
            "label": "Run final.exe",
            "type": "shell",
            "command": "make run && pause", // Giữ terminal mở
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoExit",
                        "-Command"
                    ]
                }
            },
            "problemMatcher": [],
            "detail": "Run 'make run' to execute final.exe in PowerShell"
        },
        {
            "label": "Clean with Makefile",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoExit",
                        "-Command"
                    ]
                }
            },
            "problemMatcher": [],
            "detail": "Run 'make clean' to remove generated files in PowerShell"
        }
    ],
    "version": "2.0.0"
}